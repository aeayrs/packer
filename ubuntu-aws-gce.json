{
    "variables": {
        "base_name": "packer-demo-ub",
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "aws_region":     "us-west-2",
        "gce_service_account": "/Users/allaneayrs/.config/gcloud/application_default_credentials.json",
        "gce_project_id": "my-test-project-230915",
        "gce_region":     "us-west1",
        "gce_zone":       "us-west1-b"

    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "packer-ubuntu-18.04-{{timestamp}}",
            "name": "{{user `base_name`}}1804-aws",
            "instance_type": "t2.micro",
            "region": "{{user `aws_region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
              "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        },
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "packer-ubuntu-16.04-{{timestamp}}",
            "name": "{{user `base_name`}}1604-aws",
            "instance_type": "t2.micro",
            "region": "{{user `aws_region`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami_filter": {
              "filters": {
              "virtualization-type": "hvm",
              "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
              "root-device-type": "ebs"
              },
              "owners": ["099720109477"],
              "most_recent": true
            },
            "ssh_username": "ubuntu",
            "type": "amazon-ebs"
        },
        {
          "type": "googlecompute",
          "name": "{{user `base_name`}}1804-gce",
          "project_id": "{{user `gce_project_id`}}",
          "machine_type": "n1-standard-1",
          "source_image_family": "ubuntu-1804-lts",
          "region": "{{user `gce_region`}}",
          "zone": "{{user `gce_zone`}}",
          "image_description": "packer-ubuntu-18-demo",
          "image_name": "packer-ub1804-demo-{{timestamp}}",
          "disk_size": 16,
          "disk_type": "pd-ssd",
          "ssh_username": "root",
          "account_file": "{{ user `gce_service_account`}}"
        }       
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 30",
                "sudo apt-get update",
                "sudo apt-get install -y redis-server"
            ]
        }
    ]
}